{
  "name": "react-wrench",
  "version": "0.2.1",
  "description": "Utilities for React web applications. :wrench:",
  "repository": "git@github.com:oreqizer/react-wrench.git",
  "author": "oreqizer <oreqizer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn storybook",
    "build": "yarn typegen && yarn babel",
    "typegen": "yarn tsc && rimraf lib/**/*.js",
    "babel": "babel src -d lib --extensions '.ts,.tsx' --ignore '**/__tests__/*'",
    "test": "jest --passWithNoTests",
    "types": "tsc --noEmit",
    "lint": "eslint './**/*.{js,ts,tsx,js.flow}'",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o docs/storybook",
    "docgen": "node etc/docgen",
    "docgen:check": "node etc/docgen/check",
    "docs": "run-p docgen storybook:build",
    "prepare": "rimraf lib && run-p test lint types && yarn build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "run-p docgen changelog && git add CHANGELOG.md docs/**"
  },
  "files": [
    "lib",
    "README.md"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn docs && git add --all && git commit --amend --no-edit"
    }
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-relay": "^5.0.0",
    "relay-runtime": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@storybook/addon-actions": "5.1.8",
    "@storybook/addon-knobs": "^5.0.11",
    "@storybook/addon-links": "5.1.8",
    "@storybook/addons": "5.1.8",
    "@storybook/react": "5.1.8",
    "@types/enzyme": "^3.9.1",
    "@types/jest": "^24.0.12",
    "@types/js-cookie": "^2.2.2",
    "@types/node": "^12.0.0",
    "@types/ramda": "^0.26.9",
    "@types/react": "^16.8.16",
    "@types/react-dom": "^16.8.4",
    "@types/react-relay": "^1.3.15",
    "@types/relay-runtime": "^1.3.13",
    "@types/storybook__addon-knobs": "^5.0.0",
    "@types/storybook__react": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "conventional-changelog-cli": "^2.0.21",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^1.6.0",
    "fs-extra": "^8.0.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.1",
    "raf": "^3.4.1",
    "ramda": "^0.26.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-relay": "^5.0.0",
    "relay-runtime": "^5.0.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "js-cookie": "^2.2.0"
  }
}
